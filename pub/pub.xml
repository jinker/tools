<project name="pub" basedir="" default="pub">
    <target name="pub">
        <input message="Please enter order id :" addproperty="orderId"/>
        <echo message="The order id is : ${orderId}"/>
        <echo message="Start reset order..."/>
        <apply executable="java" parallel="false" verbose="true">
            <fileset file="Pub.jar"/>
            <arg line="-jar"/>
            <arg path="Pub.jar"/>
            <!--userName-->
            <arg value="jinker"/>
            <!--passWord-->
            <arg value="jinker"/>
            <!--orderId-->
            <arg value="${orderId}"/>
        </apply>
        <echo message="Order reset success"/>
    </target>
</project>